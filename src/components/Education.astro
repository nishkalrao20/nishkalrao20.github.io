---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---
{hasEducation && (
  <section id="education" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Education
        </h2>
        <div class="w-[75px] h-[5px] mt-2 rounded-full" style="background-color: var(--accent-color);" />
      </div>

      <div class="lg:col-span-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {siteConfig.education.map((edu) => (
            <article class="w-full rounded-2xl border card-surface p-5 shadow-sm hover:shadow-md transition-all duration-300" key={edu.school}>
              <div class="flex items-start gap-4">
                <div class="flex-1">
                  <div class="flex items-center justify-between gap-2">
                    <div>
                      <h3 class="text-lg sm:text-xl font-semibold" style="font-family: var(--heading-font);">
                        {edu.degree}
                      </h3>
                      <p class="text-sm mt-1" style={`color: ${siteConfig.accentColor}; font-family: var(--body-font);`}>
                        {edu.school}
                      </p>
                    </div>

                    {edu.logo ? (
                      <img src={edu.logo} alt={`${edu.school} logo`} class="w-12 h-12 object-contain rounded" loading="lazy" />
                    ) : (
                      <div class="w-12 h-12 rounded bg-[rgba(var(--accent-rgb),0.08)] flex items-center justify-center text-xs font-semibold" aria-hidden="true">
                        {edu.dateRange ? edu.dateRange.split('â€“')[0] : ''}
                      </div>
                    )}
                  </div>

                  {edu.achievements && edu.achievements.length > 0 && (
                    <ul class="mt-3 space-y-2">
                      {edu.achievements.map((achievement) => (
                        <li class="flex items-start">
                          <span class="inline-block w-2 h-2 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm" style="font-family:var(--body-font);">{achievement}</span>
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              </div>

              <div class="mt-4 flex items-center justify-between">
                <div class="text-xs text-muted font-mono">{edu.dateRange}</div>
                {edu.link ? (
                  <a href={edu.link} target="_blank" rel="noopener noreferrer" class="text-xs px-2 py-1 rounded border card-surface inline-flex items-center gap-2">
                    View
                  </a>
                ) : null}
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
)}

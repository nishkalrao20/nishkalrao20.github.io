---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;

const getInitials = (name: string | undefined) => {
  if (!name) return "";
  const parts = name
    .replace(/[,()]/g, "")
    .trim()
    .split(/\s+/)
    .filter(Boolean);
  if (parts.length === 1) return parts[0].substring(0, 2).toUpperCase();
  return (parts[0][0] + (parts[1] ? parts[1][0] : "")).toUpperCase();
};
---

{hasEducation && (
  <section id="education" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Education
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style="background-color: var(--accent-color);"
        />
      </div>

      <div class="lg:col-span-8">
        <div class="space-y-8">
          {siteConfig.education.map((edu) => (
            <article class="w-full rounded-2xl border card-surface p-5 shadow-sm hover:shadow-md transition-all duration-300" key={edu.school}>
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                <div class="flex items-start gap-4">
                  {edu.link ? (
                    <a href={edu.link} target="_blank" rel="noopener" class="flex items-center gap-3">
                      {edu.logo ? (
                        <img
                          src={edu.logo}
                          alt={`${edu.school ?? "Institute"} logo`}
                          class="w-10 h-10 rounded-sm object-contain shadow-sm"
                          loading="lazy"
                        />
                      ) : (
                        <div
                          class="w-10 h-10 rounded-full flex items-center justify-center font-mono text-sm"
                          style="background: rgba(var(--card-bg-rgb),0.9); color: var(--accent-color);"
                          aria-hidden="true"
                        >
                          {getInitials(edu.school)}
                        </div>
                      )}
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                          {edu.degree}
                        </h3>
                        <p class="text-base sm:text-lg font-mono" style="color: var(--accent-color);">
                          {edu.school}
                        </p>
                      </div>
                    </a>
                  ) : (
                    <div class="flex items-center gap-3">
                      {edu.logo ? (
                        <img
                          src={edu.logo}
                          alt={`${edu.school ?? "Institute"} logo`}
                          class="w-10 h-10 rounded-sm object-contain shadow-sm"
                          loading="lazy"
                        />
                      ) : (
                        <div
                          class="w-10 h-10 rounded-full flex items-center justify-center font-mono text-sm"
                          style="background: rgba(var(--card-bg-rgb),0.9); color: var(--accent-color);"
                          aria-hidden="true"
                        >
                          {getInitials(edu.school)}
                        </div>
                      )}
          
                      <div>
                        <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                          {edu.degree}
                        </h3>
                        <p class="text-base sm:text-lg font-mono" style={`color: ${siteConfig.accentColor}`}>
                          {edu.school}
                        </p>
                      </div>
                    </div>
                  )}
                </div>
          
                <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                  {edu.dateRange}
                </span>
              </div>
          
              {edu.achievements && edu.achievements.length > 0 && (
                <ul class="space-y-2">
                  {edu.achievements.map((achievement) => (
                    <li class="flex items-start">
                      <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                      <span class="text-sm sm:text-base font-mono text-gray-600">
                        {achievement}
                      </span>
                    </li>
                  ))}
                </ul>
              )}
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
)}

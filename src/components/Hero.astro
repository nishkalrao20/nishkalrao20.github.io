--- 
import { siteConfig } from "../config";
---
<div
  id="hero"
  class="relative isolate overflow-hidden py-24 md:h-screen"
  style={`--mouse-x: 50%; --mouse-y: 20%`}
>
  <div class="absolute inset-0 -z-10 hero-bg"></div>

  <script is:inline>
    (function initAccentAndPersistedTheme(){
      try {
        const hex = `${siteConfig.accentColor}`?.trim() || '#1d4ed8';
        const h = hex.replace('#','');
        const rgb = (h.length === 3)
          ? [parseInt(h[0]+h[0],16), parseInt(h[1]+h[1],16), parseInt(h[2]+h[2],16)]
          : [parseInt(h.slice(0,2),16), parseInt(h.slice(2,4),16), parseInt(h.slice(4,6),16)];
        document.documentElement.style.setProperty('--accent-rgb', rgb.join(','));
        document.documentElement.style.setProperty('--accent-color', `#${h}`);
        document.documentElement.style.setProperty('--hero-accent-rgb', rgb.join(','));
      } catch(e) {}
      try {
        const ls = localStorage.getItem('theme'); // 'dark' | 'light' | null
        if (ls === 'dark') document.documentElement.classList.add('dark');
        else if (ls === 'light') document.documentElement.classList.remove('dark');
      } catch(e) {}
    })();
  </script>

  <style>
    .hero-name {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      line-height: 0.95;
      font-family: var(--name-font);
      font-weight: 600;
      font-size: clamp(2.4rem, 6.8vw, 5.5rem); /* larger than before */
      margin: 0;
      letter-spacing: -0.02em;
    }
  
    .hero-name .name-english {
      font-family: var(--heading-font), var(--name-font);
      font-weight: 600;
      font-size: inherit;
    }
  
    .name-cycle {
      display: block;
      margin-top: 0.15rem;
      font-family: var(--body-font);
      font-size: clamp(1.0rem, 2.1vw, 1.2rem);
      color: rgba(var(--muted-text-color), 1);
      height: 1.2em;
      position: relative;
      overflow: visible;
    }
  
    .name-variant {
      position: absolute;
      left: 0;
      top: 0;
      opacity: 0;
      transform: translateY(6px);
      transition: opacity .45s ease, transform .45s ease;
      white-space: nowrap;
    }
    .name-variant.show {
      opacity: 1;
      transform: translateY(0);
    }
  
    .name-variant[data-script="devanagari"] { font-family: var(--name-deva); }
    .name-variant[data-script="kannada"]   { font-family: var(--name-kannada); }
    .name-variant[data-script="tulu"]      { font-family: var(--name-tulu), var(--name-deva); }
  
    .hero-subtitle { font-weight: 400; color: rgba(var(--text-color), .9); }

    .hero-bg {
      position: relative;
      transition: background-position 120ms linear, background 180ms linear;
      background: radial-gradient(
        1000px 1400px at var(--mouse-x) var(--mouse-y),
        rgba(var(--hero-accent-rgb), var(--hero-stop-accent-1-alpha)) 0%,
        rgba(var(--hero-accent-rgb), var(--hero-stop-accent-2-alpha)) 25%,
        rgba(var(--hero-stop-mid-rgb), var(--hero-stop-mid-alpha)) 35%,
        rgba(var(--hero-end-rgb), var(--hero-end-alpha)) 100%
      );
      background-blend-mode: normal;
    }

    .hero-bg::after {
      content: "";
      position: absolute;
      inset: 0;
      pointer-events: none;
      background-image:
        linear-gradient(135deg, rgba(var(--hero-accent-rgb), 0.03) 0%, transparent 30%),
        linear-gradient(225deg, rgba(var(--accent-rgb), 0.015) 0%, transparent 40%);
      opacity: 1;
      mix-blend-mode: normal;
    }

    .hero-bg-svg { pointer-events: none; }

    .hero-content { color: rgba(var(--text-color), 1); }
    .hero-content svg { stroke: currentColor; fill: none; }
    .hero-content svg.fill-current { fill: currentColor; stroke: none; }

    .accent { color: var(--accent-color); }

    @keyframes fadeIn { from { opacity: 0; transform: translateY(20px);} to { opacity:1; transform: translateY(0);} }
    .animate-fade-in { animation: fadeIn 0.8s ease-out forwards; opacity: 0; }
    .animation-delay-200 { animation-delay: 0.2s; }
    .animation-delay-400 { animation-delay: 0.4s; }
    .animation-delay-600 { animation-delay: 0.6s; }
  </style>


---
import { siteConfig } from "../config";
const news = siteConfig.news ?? [];
---
<section id="news" class="max-w-4xl mx-auto px-6 py-12">
  <h2 class="text-3xl font-bold mb-4">News & Updates</h2>

  { news.length === 0 ? (
    <p class="text-gray-600">No news yet — I’ll post updates here for talks, posters and events.</p>
  ) : (
    <div class="space-y-4">
      {news.map(item => (
        <div class="p-4 border rounded-md">
          <div class="flex items-baseline justify-between">
            <div>
              <h3 class="text-lg font-semibold">{item.title}</h3>
              {item.description && <p class="text-sm text-gray-700 mt-1">{item.description}</p>}
            </div>
            <div class="text-xs text-gray-500">{item.date}</div>
          </div>
          {item.url && (
            <div class="mt-3">
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="text-sm font-mono inline-block">
                View → 
              </a>
            </div>
          )}
        </div>
      ))}
    </div>
  ) }
</section>

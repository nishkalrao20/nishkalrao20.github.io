---
import { siteConfig } from "../config";
const news = siteConfig.news ?? [];
const accent = siteConfig.accentColor ?? "#1d4ed8";
---
{news.length > 0 && (
  <section id="news" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">News & Updates</h2>
        <div class="w-[75px] h-[5px] mt-2 rounded-full" style={`background-color: ${accent}`}></div>
      </div>

      <div class="lg:col-span-8">
        <div class="space-y-6">
          {news.map((item) => (
            <article class="rounded-2xl border border-gray-200 p-5 bg-white/60 shadow-sm">
              <a class="block" href={item.program ?? item.url ?? '#'} target={item.program ? "_blank" : "_self"} rel="noopener">
                <div class="flex items-start gap-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold font-mono">{item.title}</h3>
                    <p class="text-sm text-gray-600 mt-1">{item.description}</p>
                    <div class="text-xs text-gray-500 mt-3 font-mono">
                      {item.date}
                    </div>
                  </div>

                  <div class="flex-shrink-0 flex flex-col items-end gap-2">
                    {item.poster ? (
                      <a href={item.poster} target="_blank" rel="noopener" class="text-xs font-mono px-3 py-1 rounded bg-gray-900 text-white">Poster</a>
                    ) : null}

                    {item.docs ? (
                      <a href={item.docs} target="_blank" rel="noopener" class="text-xs font-mono px-3 py-1 rounded border">Notes</a>
                    ) : null}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
)}
